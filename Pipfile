[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[scripts]
lint = """sh -c "
    echo 'Running black' \
    && black --check . \
    && echo 'Running isort' \
    && isort --check --gitignore . \
    && echo 'Running pylint' \
    && pylint visiumlint \
    && echo 'Running pydocstyle' \
    && pydocstyle visiumlint \
    && echo 'Running mypy' \
    && ! mypy visiumlint --disallow-untyped-defs --disallow-incomplete-defs | grep 'Function is missing' || false
"
"""

[packages]
typer = "*"
setuptools = "*"
build = "*"
black = "*"
isort = "*"
pre-commit = "*"
pydocstyle = "*"
pylint = "*"
mypy = "*"
visiumlint = {path = "."}
bump = "*"
bumpversion = "*"

[dev-packages]
setuptools = "*"
wheel = "*"
twine = "*"

[requires]
python_version = "3.10"
